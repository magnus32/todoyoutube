{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('todo_list') }}" class="btn btn-default">Back to todos</a>
    <hr>
    <h2 class="page-header">{{ todo.name }}</h2>
    <ul class="list-group">
    	<li class="list-group-item">Category : {{ todo.category }}</li>
    	<li class="list-group-item">Prio : {{ todo.priority }}</li>
    	<li class="list-group-item">Due date : <strong>{{ todo.dueDate|date }}</strong></li>
    </ul>

    <p>
        {{ todo.description }}
    </p>
{% endblock %}
